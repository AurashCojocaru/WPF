<Window x:Class="WpfSeeds.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSeeds"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="900"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="450" />

            </Grid.ColumnDefinitions>
            <Button Name="BtnAction" Content="Click" Click="BtnAction_Click" Width="100" Height="50"></Button>
            <TextBox Grid.Column="1" Name="TbCount" Width="100" Height="50" Text="0.25" />
            <Slider Grid.Column="2" Name="Slider" Minimum="0" Maximum="4" TickFrequency="0.1" Margin="0, 100, 0, 0" ValueChanged="Slider_ValueChanged" />
        </Grid>
        <local:EllipseCanvas Grid.Row="1" x:Name="MainCanvas" Width="800" Height="600" Background="Gray">

        </local:EllipseCanvas>
    </Grid>
</Window>
